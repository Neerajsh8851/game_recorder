<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#DB3943"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_toggle_pause_resume"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#112031"
        android:padding="15dp"
        android:tag="current_btn_pause"
        android:src="@drawable/vec_ic_pause"
        android:contentDescription="pause_resume" />


    <ImageView
        android:id="@+id/iv_stop"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@id/iv_toggle_pause_resume"
        android:background="#112031"
        android:padding="15dp"
        android:src="@drawable/vec_ic_stop"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/iv_stop"
        android:text="GAME REC"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>